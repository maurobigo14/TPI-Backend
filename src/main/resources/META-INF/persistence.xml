<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
			 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
			 xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
			 version="3.0">

	<!-- Unidad de persistencia creada a partir de los modelos del proyecto -->
	<persistence-unit name="TPI-PU" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

		<!-- Listado explícito de entidades -->
		<class>org.example.model.Camion</class>
		<class>org.example.model.Contenedor</class>
		<class>org.example.model.Cliente</class>
		<class>org.example.model.Deposito</class>
		<class>org.example.model.Ruta</class>
		<class>org.example.model.Solicitud</class>
		<class>org.example.model.Tarifa</class>
		<class>org.example.model.Tramo</class>

		<properties>
			<!-- JDBC (ajusta url/usuario/clave a tu entorno) -->
			<property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
			<property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/tpi_db"/>
			<property name="jakarta.persistence.jdbc.user" value="tpi_user"/>
			<property name="jakarta.persistence.jdbc.password" value="cambiar_contraseña_segura"/>

			<!-- Hibernate / JPA settings -->
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
			<!-- hbm2ddl: validate|update|create|create-drop. Recomiendo 'validate' en producción. -->
			<property name="hibernate.hbm2ddl.auto" value="validate"/>
			<property name="hibernate.show_sql" value="false"/>
			<property name="hibernate.format_sql" value="true"/>

			<!-- Pooling/driver properties (opcional si Spring Boot gestiona datasource) -->
			<!-- <property name="hibernate.connection.provider_class" value="org.hibernate.hikaricp.internal.HikariCPConnectionProvider"/> -->
		</properties>
	</persistence-unit>
</persistence>

